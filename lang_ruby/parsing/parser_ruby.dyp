/*(*************************************************************************)*/
/*(*1 Rules type declaration *)*/
/*(*************************************************************************)*/
%start <Ast_ruby.program> main
%start <Ast_ruby.any> sgrep_spatch_pattern
%%

/*(*************************************************************************)*/
/*(*1 Toplevel *)*/
/*(*************************************************************************)*/

main: eols stmt_list<xs> T_EOF { xs }

stmt_list:
  | /*empty*/ { [] }
  | stmt<s>   { [s] }

  /*(* recursive *)*/
  | /*empty*/ T_SEMICOLON   eols stmt_list<ss> @{ ss,     [Dyp.Dont_shift] }
  | stmt<s>   eol_or_semi   eols stmt_list<ss> @{ s::ss,  [Dyp.Dont_shift] }

eols:
  | /*empty*/  {}
  /*(* recursive *)*/
  | eols T_EOL {}

/*(* called T or TERM in original grammar *)*/
eol_or_semi:
 | T_SEMICOLON {}
 | T_EOL {}

/*(*************************************************************************)*/
/*(*1 Sgrep *)*/
/*(*************************************************************************)*/
sgrep_spatch_pattern: eols stmt_list T_EOF { Pr $2 }

/*(*************************************************************************)*/
/*(*1 Statement (part 1) *)*/
/*(*************************************************************************)*/

stmt:
  | K_ALIAS<pos> meth_or_atom<e1> meth_or_atom<e2> 
      { D (Alias(pos, e1,e2)) }
  | K_UNDEF<pos> meth_or_atom_list<e1> 
      { D (Undef(pos, e1)) }

  | stmt<s> K_IF<pos>     eols stmt<g> 
      { if M.is_cond_modifier g then raise Dyp.Giveup; 
        S (If(pos, g, [s], [])) }
  | stmt<s> K_UNLESS<pos> eols stmt<g>
      { if M.is_cond_modifier g then raise Dyp.Giveup; 
        S (Unless(pos, g, [s], [])) }
  | stmt<s> K_UNTIL<pos>  eols stmt<g> 
      { if M.is_cond_modifier g then raise Dyp.Giveup; 
        S (Until(pos, is_exnblock s, g, [s])) }
  | stmt<s> K_WHILE<pos>  eols stmt<g>
      { if M.is_cond_modifier g then raise Dyp.Giveup;
        S (While(pos, is_exnblock s,g, [s])) }
  | stmt<s> K_RESCUE<pos> eols stmt<g>
      { if M.is_cond_modifier g then raise Dyp.Giveup;
        S (ExnBlock({body_exprs = [s]; rescue_exprs = [(S Empty,g)];
            ensure_expr = []; else_expr = []})) }

  /* handle special case for x = y rescue z where rescue binds to 
   * just the rhs, not the full assignment (unlike the other modifiers)
   */
  | lhs_assign_op<l,op,_tk> eols arg<r> K_RESCUE<pos> eols stmt<guard>
      { if M.is_cond_modifier guard then raise Dyp.Giveup;
        let r' = S (ExnBlock({body_exprs=[r];rescue_exprs =[(S Empty,guard)];
                 ensure_expr = []; else_expr = []}))
         in (*prune_binop l op r'*) 
         Binop(l,(op,pos),r') (* TODO: wrong pos *)}
  | mlhs_assign_op<l,op,tk> eols mrhs<r>
      { (*prune_binop (tuple l) op (tuple r)*) 
         let lhs = tuple l in
         Binop(lhs,(op,tk), (tuple r)) (* TODO: wrong pos?*)
      }

  | scope_BEGIN<pos> eols T_LBRACE eols stmt_list<xs> T_RBRACE
      { S.leave_scope dyp; D (BeginBlock(pos, ($3, xs, $6)))}
  | scope_END<pos>  eols T_LBRACE  eols stmt_list<xs> T_RBRACE
      { S.leave_scope dyp; D (EndBlock(pos, ($3, xs, $6)))}

  | topcall<c> 
      { c }
  | expr<e> 
      { e }

  | T_USTAR<pos> primary<e> 
      { Unary((Op_UStar,pos),e) }

/* tokens that need to reduce immediately to guide the lexer */
scope_BEGIN:  K_BEGIN<pos>  {S.enter_scope dyp; pos}
scope_END:    K_END<pos>    {S.enter_scope dyp; pos}

/*(*************************************************************************)*/
/*(*1 Expressions (or statement part 2) *)*/
/*(*************************************************************************)*/

expr:
  | K_RETURN<pos> call_args<xs>
      { M.well_formed_return xs; 
        S (Return(pos, xs)) }
 /*(* call_args-->arg_comma_star_list-->arg_comma_nonempty_list->arg vs arg*)*/
  | K_RETURN<pos> arg<p>
      { match p with
        | S Block([x]) -> S (Return(pos, [x]))
        | arg -> if M.is_cond_modifier arg then raise Dyp.Giveup;
                 S (Return(pos, [arg])) 
      }
  /*(* stmt-->topcall-->command-->K_YIELD vs stmt-->expr-->K_YIELD *)*/
  | K_YIELD<pos> call_args<xs> 
      { M.well_formed_return xs;
        S (Yield(pos, xs)) }

  | expr<e1> K_AND eols expr<e2> { M.prune_left_assoc $2 e1 Op_kAND e2 }
  | expr<e1> K_OR eols expr<e2>  { M.prune_left_assoc $2 e1 Op_kOR e2 }
  | K_NOT<pos>  eols expr<e>     { M.prune_uop Op_UNot e pos}
  | T_BANG<pos> eols expr<e>     { M.prune_uop Op_UBang e pos}

  /*(* stmt-->topcall-->command vs stmt-->expr-->command *)*/
  | command<c>              { c }

  | arg<a>                  { a }

/*(*************************************************************************)*/
/*(*1 Arg *)*/
/*(*************************************************************************)*/

arg:
  | lhs_pruned_assign_op<l,op,tk> eols arg<r> 
      { M.prune_right_assoc tk l op r }

  | unary_op<o,pos>    eols arg<a> { M.prune_uop o a pos }

  | arg<l> bin_op<bop,tk> eols arg<r> { M.prune_left_assoc tk l bop r }
  | arg<l> T_ANDOP     eols arg<r> { M.prune_left_assoc $2 l Op_AND r }
  | arg<l> T_OROP      eols arg<r> { M.prune_left_assoc $2 l Op_OR r }

  | arg<e1> T_QUESTION<pos> eols expr<e2> T_COLON eols expr<e3>   
    { M.prune_tern e1 e2 e3 $2 $5 }

  | primary<p> {p}

/*(*************************************************************************)*/
/*(*1 Primary (or statement part 3) *)*/
/*(*************************************************************************)*/

primary:
  | T_LPAREN<pos> eols stmt_list<ss> T_RPAREN
      { (* don't collapse the block here to prevent the disambiguation
           rules from erroneously firing *) 
         S (Block(ss)) }

  | constant<c> { c }
  | identifier<id> { Id id }
  | K_NIL             { Literal(Nil $1) }
  | K_TRUE            { Literal(Bool (true,$1)) }
  | K_FALSE           { Literal(Bool (false,$1)) }

  /*(* stmt-->topcall-->command-->command_name (with empty call_args) vs
     * stmt-->expr-->arg-->primary-->command_name *)*/
  | command_name<c>                { M.methodcall c [] None}
  | command_name<c> code_block<cb> { M.command_codeblock c cb }

  /*(* stmt-->topcall vs stmt-->expr-->arg-->primary *)*/
  | func<f>                { f }
  | func<f> code_block<cb> 
      { match f with
        | Call(m,args,None) -> M.methodcall m args (Some cb)
        | _ -> M.methodcall f [] (Some cb)
      }

  | primary<p> T_SCOPE identifier<id>  { M.scope $2 p (Id id) }
  | T_USCOPE<pos> identifier<id>       { Unary((Op_UScope,pos), Id id) }

  | primary<p> T_LBRACK_ARG<pos1> eols arg_comma_list_trail<xs> eols T_RBRACK
      { M.methodcall (Binop(p,(Op_DOT,pos1), Operator(Op_AREF,pos1))) (* TODO: wrong tok Binop? *)
                   xs None
      }

  | T_LBRACK eols array_body<xs> eols T_RBRACK { Array($1, xs, $5) }
  | T_LBRACE eols array_body<xs> eols T_RBRACE { Hash(true, ($1, xs, $5)) }


  | K_RETURN<pos> { S (Return(pos, [])) }
/*  
 * | K_RETURN<pos>T_LPAREN eols call_args<args> eols T_RPAREN{Return(pos, args)}
 * | K_RETURN<pos> any_LPAREN eols expr<arg> eols T_RPAREN { S (Return(pos, [arg]))}
 */
  | K_YIELD<pos> { S (Yield(pos, [])) }
  | K_YIELD<pos> any_LPAREN eols call_args<xs> eols T_RPAREN { S (Yield(pos, xs))}
  | K_YIELD<pos> any_LPAREN eols expr<e>       eols T_RPAREN { S (Yield(pos, [e]))}

  | K_IF<pos> expr<g> then_sep stmt_list<xs> if_else_clauses<else_e> K_lEND
    { S (If(pos, g, xs, else_e)) }

  | K_UNLESS<pos> expr<g> then_sep stmt_list<xs> case_else<else_e> K_lEND
    { S (Unless(pos, g, xs, else_e)) }

  | K_WHILE<pos> expr<g> do_sep stmt_list<xs> K_lEND
    { M.well_formed_do g xs; 
      S (While(pos, false, g, xs)) }

  | K_UNTIL<pos> expr<g> do_sep stmt_list<xs> K_lEND
    { M.well_formed_do g xs;
      S (Until(pos, false, g , xs)) }

  | K_CASE<pos> some_eols         when_clauses<xs> case_else<else_e> K_lEND
    { S (Case(pos, {case_guard=None; case_whens=xs; case_else = else_e})) }

  | K_CASE<pos> eols expr<e> eols when_clauses<xs> case_else<else_e> K_lEND
    { S (Case(pos, {case_guard = Some e; case_whens = xs; case_else = else_e})) }

  | K_CASE<pos> eols expr<e> T_SEMICOLON eols when_clauses<xs> case_else<else_e> K_lEND

    { S (Case(pos, {case_guard = Some e; case_whens = xs; case_else = else_e})) }

  | K_FOR<pos> formal_arg_list<vars> K_IN arg<a> do_sep stmt_list<xs> K_lEND
    { M.well_formed_do a xs; 
      S (For(pos, vars, a, xs)) }

  | K_lBEGIN<pos> eols body_exn<body>  K_lEND { S (ExnBlock(body)) }

  /*(* defintions! *)*/
  | class_definition { $1 }

  | module_definition { $1 }

  | method_definition { $1 }


arg_comma_list_trail:
  | arg_comma_star_list<e> {e}
  | arg_comma_star_list<e> T_COMMA {e}


do_sep:
    | T_SEMICOLON eols {}
    | T_COLON eols     {}
    | some_eols        {}
    | eols K_DO eols   {}

then_sep:
    | T_SEMICOLON eols {}
    | T_COLON     eols {}
    | some_eols        {}
    | eols K_THEN eols {}

/*(*----------------------------*)*/
/*(*2 constants *)*/
/*(*----------------------------*)*/

constant:
  | T_NUM   { Literal (Num $1) }
  | T_FLOAT { Literal (Float $1) }

  | string<s>        { s }

  | T_ATOM    { Literal (Atom $1) }
  | T_ATOM_BEG<pos> interp_str<istr> { Literal (Atom (istr,pos)) }

  | T_REGEXP<s,m,pos> { Literal(Regexp ((s,m),pos)) }
  | T_REGEXP_BEG<pos> interp_str<istr> T_REGEXP_MOD<mods, _posTODO>
      { Literal(Regexp ((istr,mods),pos)) }

  | T_TICK_BEG<pos> interp_str<istr> { Literal (String ((Tick istr),pos)) }

/*(*----------------------------*)*/
/*(*2 strings *)*/
/*(*----------------------------*)*/
string:
  | one_string<s> {s} /* ("abc" 'def') is the string "abcdef" */
  /*(* recursive *)*/
  | string<s1> one_string<s2> { M.merge_string_lits s1 s2 }

one_string:
  | T_SINGLE_STRING<s,pos> 
      { Literal(String((Single s), pos)) }
  | T_DOUBLE_BEG<pos> interp_str<istr> 
      { Literal(String ((Double istr), pos)) }

  | T_USER_BEG<m,pos> interp_str<str> { M.process_user_string m str pos }


interp_str:
  | T_SINGLE_STRING<str,p> {[StrChars str]}
  | interp_str_work<i> 
      {match i with [] -> [StrChars ""] | lst -> lst}

interp_str_work:
  | T_INTERP_STR<s,pos> interp_code<tl>
      { if s = "" then tl else (StrChars s)::tl }

  | T_INTERP_END<s,pos2> 
      { if s = "" then [] else [StrChars s] }

interp_code:
  | eols stmt_list<ss> interp_str_work<tl>
      { match ss with
          | [] -> tl
          | x::_ -> StrExpr (mk_block ss)::tl }

  | T_INTERP_END<s,pos> 
      { if s = "" then [] else [StrChars s] }

/*(*----------------------------*)*/
/*(*2 Exceptions *)*/
/*(*----------------------------*)*/

body_exn:
 | stmt_list<xs> rescue_list<resc_e> case_else<else_e> ensure_clause<ens_e>
     { { body_exprs = xs; rescue_exprs = resc_e; 
        ensure_expr = ens_e; else_expr = else_e} 
     }

rescue_clause:
  | K_RESCUE<resc_pos> then_sep stmt_list<xs> { (S Empty, mk_block xs) }

  | K_RESCUE<pos> T_ASSOC seen_id<bind> then_sep stmt_list<xs>
      { (Binop(S Empty,(Op_ASSOC,$2),bind), mk_block xs) }

  | K_RESCUE<pos> arg_comma_star_list<exn> then_sep stmt_list<xs>
    { (tuple exn, mk_block xs) }

  | K_RESCUE<pos> arg_comma_star_list<exn> 
    { (tuple exn,S Empty) }

seen_id: identifier<i> { M.seen dyp (Id i); Id i}


rescue_list:
  | /* empty */ { [] }
  /* need to force an eol/semi here to disambiguate the rescue modifier */
  | eol_or_semi rescue_clause<r> rescue_list<rs> /*_rest*/
      { r::rs }

ensure_clause:
  | /* empty */ { [] }
  | K_ENSURE eols stmt_list<xs> { xs }

/*(*----------------------------*)*/
/*(*2 IfThenElse *)*/
/*(*----------------------------*)*/

if_else_clauses:
  | /* empty */ { [] }
  | K_ELSE eols stmt_list<body>
    { body }
  | K_ELSIF<pos> eols expr<g> then_sep stmt_list<xs> if_else_clauses<rest>
    { [S (If(pos, g, xs, rest)) ] }

case_else:
  | /* empty */ { [] }
  | K_ELSE eols stmt_list<xs> { xs }

/*(*----------------------------*)*/
/*(*2 Case *)*/
/*(*----------------------------*)*/

when_clauses:
  | /* empty */ { [] }
  | K_WHEN arg_comma_star_list<e> then_sep stmt_list<es> when_clauses<rest>
    { ($1, e, es) :: rest }

/*(*----------------------------*)*/
/*(*2 containers *)*/
/*(*----------------------------*)*/

array_body:
  | command<c> { [c] }
  | array_body_rest<es> { es }

array_body_rest:
  | /*(*empty*)*/    { [] }
  | array_item<e>    { [e] }
  | star_amper<es>   { es }

  /*(* recursive *)*/
  | array_item<e> T_COMMA eols array_body_rest<es> @{ e::es, [Dyp.Dont_shift] }

array_item: 
  | arg<e> { e }
  | constant<c> T_LBRACK<pos1> eols call_args<xs> eols T_RBRACK
      { M.methodcall (Binop(c, (Op_DOT,pos1), Operator(Op_AREF,pos1))) (* TODO: Wrong pos Binop, and probably all the following Binop in this file *)
                     xs None }

/*(*************************************************************************)*/
/*(*1 Call *)*/
/*(*************************************************************************)*/

topcall:
  | func<f> 
      { f }
  | func<f> code_block<cb>
      { match f with
        | Call(m,args,None) -> M.methodcall m args (Some cb)
        | _ -> M.methodcall f [] (Some cb) }

  | command<c> 
      { c }
  | command_name<m> call_args<xs> do_codeblock<cb>
      { M.well_formed_command m xs;
        M.methodcall m xs (Some cb)}

/*(*----------------------------*)*/
/*(*2 Command *)*/
/*(*----------------------------*)*/

command:
  | command_name<m> call_args<xs>
      { M.well_formed_command m xs;
        M.methodcall m xs None}
  | K_YIELD<pos>    call_args<xs> 
      { M.well_formed_return xs;
        S (Yield(pos, xs)) }

  /*(* recursive *)*/
  | command_name<cmd> command<cmd2>
      { M.well_formed_command cmd [cmd2];
        M.methodcall cmd [cmd2] None}

command_name:
  | identifier<id> 
      { Id id }

  | primary<p> T_DOT eols message_identifier<m>
      { M.unfold_dot p m $2}
  | primary<p> T_SCOPE    message_identifier<m> 
      { M.scope $2 p m }

  /*(* recursive *)*/
  | command_name<p> T_DOT eols message_identifier<m>
      { M.unfold_dot p m $2}
  | command_name<p> T_SCOPE    message_identifier<m>
      { M.scope $2 p m }

/*(*----------------------------*)*/
/*(*2 Func *)*/
/*(*----------------------------*)*/
func:
  | command_name<c> any_LPAREN eols call_args<xs> eols T_RPAREN
      { match xs with
        | [] -> Call(c, xs, None) 
        | _ -> M.methodcall c xs None
      }
  | command_name<c> any_LPAREN eols command<a> eols T_RPAREN
      { Call(c,[a],None)}

any_LPAREN:
  | T_LPAREN<pos> {pos}
  | T_LPAREN_ARG<pos> {pos}

/*(*----------------------------*)*/
/*(*2 Arguments *)*/
/*(*----------------------------*)*/

call_args:
  | /*empty*/                 { [] }
  | arg_comma_star_list<xs>   { xs }
  | T_LBRACK eols call_args<xs> eols T_RBRACK { [Array($1, xs, $5)] }

arg_comma_star_list:
  /*(* call_args-->empty vs call_args-->arg_comma_star_list-->empty *)*/
  | /*empty*/     { [] }
  | star_amper<a> { a }

  | arg_comma_nonempty_list<xs> { xs }
  | arg_comma_nonempty_list<xs> T_COMMA eols star_amper<a>
      @{ xs @ a, [Dyp.Dont_shift] }

arg_comma_nonempty_list:
  | arg<a> { [a] }
  /*(* recursive *)*/
  | arg<a> T_COMMA eols arg_comma_nonempty_list<al> @{ a::al, [Dyp.Dont_shift]}

star_amper:
  | T_USTAR<pos> arg<a> 
      { [Unary((Op_UStar,pos),a)] }
  | T_UAMPER<pos> arg<a> 
      { [Unary((Op_UAmper,pos),a)] }

  | T_USTAR<pos1> arg<a1> T_COMMA eols T_UAMPER<pos2> arg<a2>
      { [Unary((Op_UStar,pos1),a1); Unary((Op_UAmper,pos2),a2)] }


/*(*************************************************************************)*/
/*(*1 LHS/RHS *)*/
/*(*************************************************************************)*/

assign_op: 
  | T_ASSIGN          { Op_ASSIGN, $1 }
  | T_OP_ASGN<op,pos> { Op_OP_ASGN (H.binary_op_of_string op), pos }

/*(*----------------------------*)*/
/*(*2 LHS *)*/
/*(*----------------------------*)*/

lhs_assign_op: lhs<l> assign_op<op,tk>   { M.seen dyp l; l,op,tk}

lhs:
  | scoped_id<id> 
      { id }
  | K_NIL             { Literal(Nil $1) }
  | K_TRUE            { Literal(Bool (true,$1)) }
  | K_FALSE           { Literal(Bool (false,$1)) }
  | primary<p> T_LBRACK_ARG<pos> eols arg_comma_star_list<xs> eols T_RBRACK
      { M.methodcall (Binop(p,(Op_DOT,pos),Operator(Op_AREF,pos))) xs None}
  | primary<p> T_DOT eols message_identifier<m>
      { M.methodcall (Binop(p,(Op_DOT,$2), m)) [] None}

/*(*----------------------------*)*/
/*(*2 Multiple LHS *)*/
/*(*----------------------------*)*/

mlhs_assign_op: mlhs<l> assign_op<op,tk> {List.iter (M.seen dyp) l; l,op,tk}

mlhs:
  | mlhs_clean<ls> {ls}
  | mlhs_clean<ls> T_COMMA<pos> { ls @ [UOperator(Op_UStar,pos)] }

mlhs_clean:
  | T_LPAREN eols mlhs<l> eols T_RPAREN     { [(tuple l)] }
  | mlhs_item<l>                            { [l] }
  | mlhs_item<l> T_COMMA eols mlhs_rest<ls> { l::ls}
  | T_USTAR<pos> lhs<l>                     { [Unary((Op_UStar,pos),l)] }

mlhs_item:
  | lhs<l>                               {l}
  | T_USTAR<pos>                         { UOperator(Op_UStar,pos) } 
  | T_LPAREN eols mlhs<ls> eols T_RPAREN { tuple ls }

mlhs_rest:
  | mlhs_item<l> { [l] }
  /*(* recursive *)*/
  | mlhs_item<l> T_COMMA eols mlhs_rest<ls> @{ l::ls, [Dyp.Dont_shift] }
  | T_USTAR<pos> lhs<l> { [Unary((Op_UStar,pos),l)] }

/*(*----------------------------*)*/
/*(*2 Pruned LHS *)*/
/*(*----------------------------*)*/

lhs_pruned_assign_op: lhs_prune_binop<l> assign_op<op,tk> 
  { M.seen dyp l; l,op,tk}

lhs_prune_binop: lhs<l> {match l with Binop _ -> raise Dyp.Giveup | _ -> l}

/*(*----------------------------*)*/
/*(*2 Multiple RHS *)*/
/*(*----------------------------*)*/

mrhs:
  | arg_comma_star_list<xs> { match xs with [] -> raise Dyp.Giveup | _ -> xs }
  | topcall<c> { [c] }
  | T_LBRACK eols call_args<xs> eols T_RBRACK { [Array($1, xs, $5)] }
  | T_USTAR<pos> arg<a>                            { [Unary((Op_UStar,pos),a)] }
  | T_USTAR<pos> command_codeblock<c>              { [Unary((Op_UStar,pos),c)] }
  | T_USTAR<pos1> T_LBRACK eols call_args<xs> eols T_RBRACK
      { [Unary((Op_UStar,pos1),Array($2, xs, $6))] }

command_codeblock:
  | command<c>                     { c }
  | command_name<c> code_block<cb> { M.command_codeblock c cb }




/*(*************************************************************************)*/
/*(*1 Function definition *)*/
/*(*************************************************************************)*/

method_definition: scope_DEF<pos> method_name<id> method_formals<xs> eols
  body_exn<body> K_lEND
      { S.leave_scope dyp;
        D (MethodDef (pos, id, xs, body)) }

/* tokens that need to reduce immediately to guide the lexer */
scope_DEF:    K_DEF<pos>    {S.enter_scope dyp; pos}

/*(*----------------------------*)*/
/*(*2 Code Block *)*/
/*(*----------------------------*)*/

code_block:
  | brace_codeblock<cb> {cb}
  | do_codeblock<cb> {cb}

brace_codeblock:
  | T_LBRACE_ARG<pos> eols code_block_body<b> T_RBRACE
      { let args, body = b in CodeBlock(($1,true,$4),args,body) }

code_block_body:
  /* for when the lexer sees "||" instead of two "|"'s */
  | T_OROP eols stmt_list<xs>                               { (Some [], xs) }
  | T_VBAR formal_arg_list<args> T_VBAR eols stmt_list<xs>  { (Some args, xs) }
  | stmt_list<xs>                                           { (None, xs) }

do_codeblock:
  | K_DO eols code_block_body<b> K_lEND
      { let args, body = b in CodeBlock(($1,false,$4),args,body) }

/*(*----------------------------*)*/
/*(*2 parameters *)*/
/*(*----------------------------*)*/

formal_arg:
  | identifier<id>         { M.seen dyp (Id id); Formal_id (Id id) }
  | T_UAMPER T_LID<id,pos> { M.seen_str dyp id; Formal_amp ($1, $2) }
  | T_AMPER T_LID<id,pos>  { M.seen_str dyp id; Formal_amp ($1, $2) }
  | T_USTAR T_LID<id,pos>  { M.seen_str dyp id; Formal_star ($1, $2) }

  | T_USTAR                { Formal_rest $1 }
  | T_LID<id,pos> T_ASSIGN eols arg<e> 
      { M.seen_str dyp id; 
        Formal_default ($1, $2, e) }
  | any_LPAREN formal_arg_nonempty_list<f> T_RPAREN { Formal_tuple ($1, f, $3)}

formal_arg_nonempty_list:
  | formal_arg<f> { [f] }
  | formal_arg<f> T_COMMA { [f; Formal_rest $2 (* TODO *)] }
  /*(* recursive *)*/
  | formal_arg<f> T_COMMA eols formal_arg_nonempty_list<fs> 
       @{ f::fs, [Dyp.Dont_shift] }

formal_arg_list:
  | /*(* empty *)*/              { [] }
  | formal_arg_nonempty_list<xs> { xs }

method_formals:
  | eol_or_semi { [] }
  | formal_arg_nonempty_list<xs> eol_or_semi
      { match xs with
        | (Formal_tuple _)::_ -> raise Dyp.Giveup
        | e -> e }
  | any_LPAREN eols formal_arg_list<xs> eols T_RPAREN 
      { (* RPAREN usually puts the lexer in an end state, but we need to
         force it to an end state *)
         S.state_override := true; 
         xs }

/*(*************************************************************************)*/
/*(*1 Class/Module definition *)*/
/*(*************************************************************************)*/

class_definition:
  | scope_CLASS<pos> eols scoped_id<id> class_inheritance<inh> do_sep
      body_exn<body> K_lEND
      { S.leave_scope dyp;
        D (ClassDef(pos, id, inh, body))}

  | scope_CLASS<pos> T_LSHFT arg<id> eols body_exn<body> K_lEND
      { S.leave_scope dyp;
        D (ClassDef(pos, S Empty, Some (Inst_Inherit id), body)) }

module_definition: scope_MODULE<pos> scoped_id<id> eols body_exn<body> K_lEND 
      { S.leave_scope dyp;
        D (ModuleDef (pos, id, body)) }

/* tokens that need to reduce immediately to guide the lexer */
scope_CLASS:  K_CLASS<pos>  {S.enter_scope dyp; pos}
scope_MODULE: K_MODULE<pos> {S.enter_scope dyp; pos}

class_inheritance:
 | /*(* empty *)*/ { None }
 | T_LT primary<p> { Some (Class_Inherit p) }

/*(*************************************************************************)*/
/*(*1 Name *)*/
/*(*************************************************************************)*/

/*(* called 'variable' in tree-sitter-ruby *)*/
identifier:
  | T_LID<id,pos>          { ((id,pos), ID_Lowercase)}
  | T_UID<id,pos>          { ((id,pos), ID_Uppercase)}

  | T_BUILTIN_VAR<id,pos>  { ((id,pos), ID_Builtin) }
  | T_GLOBAL_VAR<id,pos>   { ((id,pos), ID_Global) }
  | T_INST_VAR<id,pos>     { ((id,pos), ID_Instance) }
  | T_CLASS_VAR<id,pos>    { ((id,pos), ID_Class) }

  | K_SELF            { (("self", $1), ID_Self) }
  | K_SUPER           { (("super", $1), ID_Super) }

scoped_id:
  | identifier<id>                            { Id id }
  | T_USCOPE<pos> identifier<id>              { Unary((Op_UScope,pos),Id id)}
  | scoped_id<id1> T_SCOPE identifier<id2>    { Binop(id1,(Op_SCOPE,$2), Id id2) }
  | scoped_id<id1> T_SCOPE keyword_as_id<id2> { Binop(id1,(Op_SCOPE,$2), id2) }


/*(* for use *)*/
message_identifier:
  | assignable<e>                       { e }
  | bin_op<op,tk>                       { Operator(op,tk) }
  | T_LBRACK_ARG<pos> T_RBRACK T_ASSIGN { Operator(Op_ASET,pos) }
  | T_UPLUS<pos>                        { UOperator(Op_UPlus,pos) }
  | T_UMINUS<pos>                       { UOperator(Op_UMinus,pos) }
  | T_TILDE<pos>                        { UOperator(Op_UTilde,pos) }

assignable:
  | identifier<e>              { Id e }
  | keyword_as_id<k>           { k }
  | T_LBRACK_ARG<pos> T_RBRACK { Operator(Op_AREF,pos) }
  | T_LBRACK<pos>     T_RBRACK { Operator(Op_AREF,pos) }


/*(* for definition *)*/
method_name:
  | message_identifier<e> { e }
  | K_NIL             { Literal(Nil $1) }
  | K_TRUE            { Literal(Bool (true,$1)) }
  | K_FALSE           { Literal(Bool (false,$1)) }


  | T_USCOPE<pos> identifier<id>     { Unary((Op_UScope,pos),Id id)}
  | T_USCOPE<pos> keyword_as_id<id>  { Unary((Op_UScope,pos),id)}

  /*(* recursive *)*/
  | method_name<e> T_ASSIGN { add_eq e }
  | method_name<id1> T_DOT eols message_identifier<id2> 
      { Binop(id1,(Op_DOT,$2), id2) }
  | method_name<id1> T_DOT eols assignable<id2> T_ASSIGN
      { Binop(id1,(Op_DOT,$2), add_eq id2) }
  | method_name<id1> T_SCOPE identifier<id2>    { M.scope $2 id1 (Id id2) }
  | method_name<id1> T_SCOPE keyword_as_id<id2> { M.scope $2 id1 id2 }

  | T_LPAREN<pos> eols stmt_list<xs> T_RPAREN T_DOT message_identifier<m>
      { Binop(mk_block xs, (Op_DOT,$5),m) }

meth_or_atom:
    | method_name<e>  { e }
    | T_ATOM<a,pos>   { Literal((Atom (a,pos))) }

/*(* operator overloading *)*/

bin_op:
  | T_PLUS   { Op_PLUS,$1 }   | T_MINUS  { Op_MINUS, $1 }
  | T_STAR   { Op_TIMES,$1 }  | T_SLASH  { Op_DIV,$1 } | T_PERCENT{ Op_REM,$1 }
  | T_POW    { Op_POW,$1 }
  | T_LSHFT  { Op_LSHIFT,$1 } | T_RSHFT  { Op_RSHIFT,$1 }
  | T_LT     { Op_LT,$1 }     | T_GT     { Op_GT,$1 }
  | T_GEQ    { Op_GEQ,$1 }    | T_LEQ    { Op_LEQ,$1 }
  | T_EQ     { Op_EQ,$1 }     | T_EQQ    { Op_EQQ,$1 } | T_NEQ    { Op_NEQ,$1 }
  | T_CMP    { Op_CMP,$1 } 
  | T_MATCH  { Op_MATCH,$1 } | T_NMATCH { Op_NMATCH,$1 }
  | T_AMPER  { Op_BAND,$1 } | T_VBAR   { Op_BOR,$1 }  | T_CARROT { Op_XOR,$1 } 

  | T_ASSOC  { Op_ASSOC,$1 }
  | T_DOT2   { Op_DOT2,$1 }
  | T_DOT3   { Op_DOT3,$1 }

unary_op:
  | T_UPLUS<pos>   { Op_UPlus,pos }  | T_UMINUS<pos>  { Op_UMinus,pos }
  | T_TILDE<pos>   { Op_UTilde,pos } | T_BANG<pos>    { Op_UBang,pos }

keyword_as_id:
  | K_CLASS<pos>   { Id(("class", pos), ID_Lowercase) }
  | K_MODULE<pos>  { Id(("module", pos), ID_Lowercase) }
  | K_DEF<pos>     { Id(("def", pos), ID_Lowercase) }
  | K_END<pos>     { Id(("END", pos), ID_Lowercase) }
  | K_ALIAS<pos>   { Id(("alias", pos), ID_Lowercase) }
  | K_UNDEF<pos>   { Id(("undef", pos), ID_Lowercase) }
  | K_BEGIN<pos>   { Id(("BEGIN", pos), ID_Lowercase) }
  | K_RESCUE<pos>  { Id(("rescue", pos), ID_Lowercase) }
  | K_ENSURE<pos>  { Id(("ensure", pos), ID_Lowercase) }
  | K_IF<pos>      { Id(("if", pos), ID_Lowercase) }
  | K_UNLESS<pos>  { Id(("unless", pos), ID_Lowercase) }
  | K_THEN<pos>    { Id(("then", pos), ID_Lowercase) }
  | K_ELSIF<pos>   { Id(("elsif", pos), ID_Lowercase) }
  | K_ELSE<pos>    { Id(("else", pos), ID_Lowercase) }
  | K_CASE<pos>    { Id(("case", pos), ID_Lowercase) }
  | K_WHEN<pos>    { Id(("when", pos), ID_Lowercase) }
  | K_WHILE<pos>   { Id(("while", pos), ID_Lowercase) }
  | K_UNTIL<pos>   { Id(("until", pos), ID_Lowercase) }
  | K_FOR<pos>     { Id(("for", pos), ID_Lowercase) }
  | K_IN<pos>      { Id(("in", pos), ID_Lowercase) }
  | K_DO<pos>      { Id(("do", pos), ID_Lowercase) }
  | K_RETURN<pos>  { Id(("return", pos), ID_Lowercase) }
  | K_AND<pos>     { Id(("and", pos), ID_Lowercase) }
  | K_OR<pos>      { Id(("or", pos), ID_Lowercase) }
  | K_NOT<pos>     { Id(("not", pos), ID_Lowercase) }
  | K_lBEGIN<pos>  { Id(("begin", pos), ID_Lowercase) }
  | K_lEND<pos>    { Id(("end", pos), ID_Lowercase) }
  | K_YIELD<pos>   { Id(("yield", pos), ID_Lowercase) }
/*  | K_DEFINED<pos> { Id(ID_Lowercase, "defined?", pos) }*/




/*(*************************************************************************)*/
/*(*1 Misc *)*/
/*(*************************************************************************)*/

some_eols :
  | T_EOL eols {}

meth_or_atom_list:
    | meth_or_atom<e> { [e] }
    | meth_or_atom<e> T_COMMA meth_or_atom_list<lst>{ e::lst }

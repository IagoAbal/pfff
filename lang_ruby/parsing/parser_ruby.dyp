let dyp_merge xs =
  M.wrap xs (fun xs ->
  Printf.eprintf "<all> branches: %d\n%!" (List.length xs);
  xs
  )
  (*Dyp.keep_all*)

let mk_block lst = 
  match lst with
  | [x] -> x
  | _ -> S (Block(lst))

let tuple = function
  | [] -> S Empty
  | [x] -> x
  | lst -> Tuple lst

let is_exnblock = function 
  | S ExnBlock _ -> true 
  | _ -> false

let rec add_eq = function
  | Id((s,p),k) -> Id((s,p), ID_Assign(k))
  | Binop(e1,(Op_SCOPE,p),e2) -> Binop(e1,(Op_SCOPE,p), add_eq e2)
  | Binop(e1,(Op_DOT,p),e2) -> Binop(e1,(Op_DOT,p), add_eq e2)
  | Operator(Op_AREF,p) -> Operator(Op_ASET,p)
  | _ -> failwith "add_eq"

}

